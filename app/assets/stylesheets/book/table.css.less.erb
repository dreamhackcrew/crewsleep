#night-table {
  background:
    url("<%= asset_path "book/graphics/table/night-table.png" %>") center bottom no-repeat,
    url("<%= asset_path "book/graphics/table/bottom-shadow.png" %>") center bottom repeat-x;
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

#table-stuff {
  position: absolute;
  bottom: 67px;
  width: 100%;
  z-index: -1;

  .inner {
    margin: 0 auto;
    width: 964px;
    position: relative;
  }
}

#picture-frame {
  position: absolute;
  left: 400px;
  bottom: 0;
  width: 104px;
  height: 104px;
  background: url("<%= asset_path "book/graphics/table/picture-frame-background.png" %>") no-repeat;

  & > img {
    margin: 12px;
  }
}

#lamp {
  position: absolute;
  right: 40px;
  bottom: 0;
  width: 221px;
  height: 461px;
  overflow: visible;
  background: url("<%= asset_path "book/graphics/table/lamp-off.png" %>") no-repeat;

  &.on {
    background-image: url("<%= asset_path "book/graphics/table/lamp-on.png" %>");
  }
}

#light {
  position: absolute;
  z-index: -2;
  height: 100%;
  width: 100%;
  bottom: 0;
  background: center bottom no-repeat;

  &.on {
    background-image: url("<%= asset_path "book/graphics/table/light.png" %>");
  }
}